use std;

effect Ask {
    ask() Int
}

effect Reader! {
    local!(fn(Int) Int, a) a
}

let hAsk = fn(v: Int) {
    handler {
        return(x) { x }
        ask() { resume(v) }
    }
};

let eLocal = elaboration Reader! -> <Ask> {
    local!(f, c) {
        handle[hAsk(f(ask()))] c
    }
};

let double = fn(x) { mul(2, x) };

let main = handle[hAsk(2)] elab {
    local!(double, ask());
};
